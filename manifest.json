{
  "manifest_version": 3,
  "name": "Ewok Notifier & Counter",
  "version": "1.0",
  "description": "Notification, time tracker and task counter.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "view/popup.html",
    "default_icon": {
      "16": "images/counter_16.png",
      "32": "images/counter_32.png",
      "48": "images/counter_64.png",
      "128": "images/counter_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "content_scripts": [
    {
      "js": ["content_script.js"],
      "matches": ["https://rating.ewoq.google.com/*"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/counter_16.png",
    "32": "images/counter_32.png",
    "48": "images/counter_64.png",
    "128": "images/counter_128.png"
  }
}

